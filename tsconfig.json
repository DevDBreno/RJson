{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "src/**/*.spec.ts", "dist"]
}
